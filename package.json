{
  "name": "winning-product-finder",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "server",
    "web",
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "dev:server": "npm run dev:server --workspace @winning-product-finder/server",
    "dev:web": "npm run dev --workspace @winning-product-finder/web"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "prettier": "^3.2.5"
  }
}

